# B3 Trading Platform - Environment Variables Example

# Database Configuration
DB_NAME=b3_trading
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Grafana Configuration
GRAFANA_PASSWORD=admin_password_here

# MetaTrader 5 Configuration (optional)
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Environment
ENVIRONMENT=development